{
    "label": "Build and run (MSYS2 internal)",
    "type": "shell",
    "command": "C:/msys64/usr/bin/bash.exe",
    "args": [
    "-lc",
    "cd \"$PWD\" && g++ main.cpp core/grid.cpp core/solver.cpp -o sim && ./sim; echo; echo Press any key to close...; read"
    ],
    "group": {
        "kind": "build",
        "isDefault": true
    },
    "problemMatcher": ["$gcc"],
    "options": {
    "shell": {
        "executable": "C:\\msys64\\usr\\bin\\bash.exe",
        "args": ["-l", "-i"]
    }
    },
    "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": true,
        "panel": "shared",
        "showReuseMessage": false,
        "clear": true
    }
}
